{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/push_swap",
            "args": ["3 4 5 6 7 8 9"],
            "cwd": "${workspaceFolder}",
            "MIMode": "lldb",
            "setupCommands": [
                { 
                    "description": "Enable pretty-printing",
                    "text": "settings set target.load-script-from-symbol-file true",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"  // Optional: if you want to ensure it's built before debugging
        }
    ]
}